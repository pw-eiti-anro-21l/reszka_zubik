<?xml version="1.0"?>
<robot xmlns:xacro="http://ros.org/wiki/xacro" name="r2d2">

<material name="white">
    <color rgba="1 1 1 1"/>
</material>

<material name="grey">
    <color rgba=".2 .2 .2 1" />
</material>

<material name="black">
    <color rgba="0 0 0 1"/>
</material>

<link name="base"> 

  <visual>
  <origin rpy="0 0 0" xyz="0 0 .6" />
    <geometry>
      <cylinder radius="0.2" length="1.2" />
    </geometry>

    <material name="grey"/>

  </visual>

</link>

<link name="arm1">

  <visual>
    <origin rpy="0 1.5708 0" xyz="0.5 0 0.05" />
    <geometry>
      <box size=".1 .18 1" />
    </geometry>
    <material name="white"/>
  </visual>

</link>

<joint name="arm1connect" type="fixed">

  <origin xyz="0 0 1.2" />
  <parent link="base"/>
  <child link="arm1"/>

</joint>

<link name="arm2">

  <visual>
    <origin rpy="0 1.5708 0" xyz="0.3 0 0.05" />
    <geometry>
      <box size=".1 .15 0.6" />
    </geometry>

    <material name="white"/>
  </visual>

</link>

<joint name="arm2connect" type="fixed">

  <origin xyz="1 0 0" />
  <parent link="arm1"/>
  <child link="arm2"/>

</joint>

<link name="wrist">

  <visual>
    <origin rpy="0 0 0" xyz="-0.025 0 -0.15" />
    <geometry>
      <box size=".05 .1 0.3" />
    </geometry>
    <material name="black"/>
  </visual>

</link>

<joint name="wristconnect" type="fixed">

  <origin rpy="0 3.14 0" xyz="0.6 0 0" />
  <parent link="arm2"/>
  <child link="wrist"/>
  
</joint>

<link name="gripper">

  <visual>
    <origin rpy="0 0 0" xyz="0 0 0.025" />
    <geometry>
      <box size=".1 .05 .05" />
    </geometry>

    <material name="grey"/>

  </visual>

</link>

<joint name="end"  type="fixed">

  <origin rpy="0 0 0" xyz="0 0 0" />
  <parent link="wrist"/>
  <child link="gripper"/>

</joint>

</robot>
