
<robot name="r2d2">

<link name="base">

  <visual>
  <origin rpy="0 0 0" xyz="0 0 .6" />
    <geometry>
      <cylinder radius="0.2" length="1.2" />
    </geometry>
  </visual>

</link>

<link name="arm1">

  <visual>
    <origin rpy="0 1.5708 0" xyz="0.5 0 0.05" />
    <geometry>
      <box size=".1 .18 1" />
    </geometry>
  </visual>

</link>

<joint name="arm1connect" type="continuous">

  <origin xyz="0 0 1.2" />
  <base xyz="0 0 1"/>
  <parent link="base"/>
  <child link="arm1"/>

</joint>

<link name="arm2">

  <visual>
    <origin rpy="0 1.5708 0" xyz="0.3 0 0.05" />
    <geometry>
      <box size=".1 .15 0.6" />
    </geometry>
  </visual>

</link>

<joint name="arm2connect" type="continuous">

  <origin xyz="1 0 0" />
  <base xyz="0 0 1"/>
  <parent link="arm1"/>
  <child link="arm2"/>

</joint>

<link name="wrist">

  <visual>
    <origin rpy="0 0 0" xyz="-0.025 0 -0.15" />
    <geometry>
      <box size=".05 .1 0.3" />
    </geometry>
  </visual>

</link>

<joint name="wristconnect" type="prismatic">

  <origin rpy="0 3.14 0" xyz="0.6 0 0" />
  <limit effort="1000.0" lower="-0.3" upper="0" velocity="0.5"/>
  <parent link="arm2"/>
  <child link="wrist"/>
  
</joint>

<link name="gripper">

  <visual>
    <origin rpy="0 0 0" xyz="0 0 0.025" />
    <geometry>
      <box size=".1 .05 .05" />
    </geometry>
  </visual>

</link>

<joint name="end"  type="fixed">

  <origin rpy="0 0 0" xyz="0 0 0" />
  <parent link="wrist"/>
  <child link="gripper"/>

</joint>

<link name="rod">

  <!-- <visual>
    <origin rpy="0 0 0" xyz="0.026 0 0.0" />
    <geometry>
      <box size=".05 .1 0.6" />
    </geometry>
  </visual> -->

</link>

<joint name="periscope"  type="fixed">

  <!-- <origin xyz=".545 0 0.05" /> -->
  <parent link="gripper"/>
  <child link="rod"/>

</joint>

<link name="box">

  <!-- <visual>
    <origin rpy="0 0 0" xyz="0 0 0.025" />
    <geometry>
      <box size=".1 .05 .05" />
    </geometry>
  </visual> -->

</link>

<joint name="boxconnect" type="fixed">

  <!-- <origin rpy="0 3.14 0" xyz="0.026 0 -0.3" /> -->
  <parent link="rod"/>
  <child link="box"/>
  
</joint>


</robot>
